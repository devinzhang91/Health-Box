<!--?xml version="1.0" encoding="utf-8"?-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottomLayout1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/tab1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:padding="1dp"
                android:src="@mipmap/lcds">
            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="蓝牙连接"
                android:textColor="#FFFFFF"
                android:textSize="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLayout2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/tab0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:padding="1dp"
                android:src="@mipmap/msg">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="历史记录"
                android:textColor="#FFFFFF"
                android:textSize="10dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLayout3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/tab0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:padding="1dp"
                android:src="@mipmap/mobile">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="运动跟踪"
                android:textColor="#FFFFFF"
                android:textSize="10dp"></TextView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>