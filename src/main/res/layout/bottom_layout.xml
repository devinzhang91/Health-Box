<!--?xml version="1.0" encoding="utf-8"?-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bottomLayout1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@mipmap/bac2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:padding="1dp"
            android:src="@mipmap/lcds">
        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="connect BT"
            android:textColor="#FFFFFF"
            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@mipmap/bac1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:padding="1dp"
            android:src="@mipmap/msg">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Terminal"
            android:textColor="#FFFFFF"
            android:textSize="10dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@mipmap/bac1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:padding="1dp"
            android:src="@mipmap/mobile">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Control"
            android:textColor="#FFFFFF"
            android:textSize="10dp"></TextView>
    </LinearLayout>
</LinearLayout>